<com.vipercn.viper4android_v2.widgets.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v4a_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ViPER4android">

    <FrameLayout
        android:id="@+id/v4a_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/v4a_navigation_drawer"
        android:background="@drawable/pager_background"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</com.vipercn.viper4android_v2.widgets.CustomDrawerLayout>

